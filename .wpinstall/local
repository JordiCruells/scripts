              'db_user'
              'db_password'
              'db_wp_user'
              'db_wp_password'
              'server'
              'regex_db'
              'regex_dir'
              'web_user'
              'charset'
              'collation'
              'wp_user'
              'wp_password'
              'wp_email'
              'server_dir'
              'working_dir'
              'prefix_table'
              'prefix_database'
              'apache_vhosts_file'
              'hosts_file' )
#Values
